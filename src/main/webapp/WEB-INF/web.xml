<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         					 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<display-nameOfTest>Archetype Created Web Application</display-nameOfTest>

	<welcome-file-list>
		<welcome-file>/WEB-INF/view/jsp/home.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-nameOfTest>MainController</servlet-nameOfTest>
		<servlet-class>com.javaweb.controller.MainController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-nameOfTest>MainController</servlet-nameOfTest>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<resource-ref>
		<description>Testing Portal Pool</description>
		<res-ref-nameOfTest>jdbc/testing_portal</res-ref-nameOfTest>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<!--<filter>
		<display-nameOfTest>AuthenticationFilter</display-nameOfTest>
		<filter-nameOfTest>AuthenticationFilter</filter-nameOfTest>
		<filter-class>com.javaweb.controller.filter.AuthenticationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-nameOfTest>AuthenticationFilter</filter-nameOfTest>
		<url-pattern>/rest/login</url-pattern>
	</filter-mapping>-->

	<context-param>
		<param-nameOfTest>javax.servlet.jsp.jstl.fmt.localizationContext</param-nameOfTest>
		<param-value>i18n.messages</param-value>
	</context-param>

</web-app>
